<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import buffon.BoardView?>
<?import javafx.scene.control.TextField?>
<?import buffon.NumberView?>

<?import javafx.scene.control.Label?>
<GridPane fx:controller="buffon.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <NumberView GridPane.rowIndex="0"
                fx:id="numberView"
                width="200"
                height="200" />

    <BoardView GridPane.rowIndex="1"
                fx:id="boardView"
                width="500"
                height="300"
                borderColor="black"
                backgroundColor="sandybrown" />

    <TextField fx:id="needleNumberInput" GridPane.rowIndex="2" text="0" />
    <Button text="Toss Needles!" onAction="#tossNeedles" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Label fx:id="inputErrorLabel" GridPane.rowIndex="4" />


</GridPane>